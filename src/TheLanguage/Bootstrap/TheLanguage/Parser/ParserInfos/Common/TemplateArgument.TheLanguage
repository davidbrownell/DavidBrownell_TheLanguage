from . import TypeModifier

from ..ParserInfo import ParserInfo, ParserInfoRegions, Region

from ..CompileTimeExpressions.Expression import (
    CompileTimeExpressionParserInfo,
    CompileTimeExpressionParserInfoRegions,
)

from ..Types.Type import TypeParserInfo, TypeParserInfoRegions


# ----------------------------------------------------------------------
public immutable class TemplateTypeArgumentParserInfo
    extends ParserInfo
:
    public TypeParserInfo val type
    public (TypeModifier | None) val modifier
    public (String | None) val keyword

    # ----------------------------------------------------------------------
    private None __Init?__():
        ensure (
            self.modifier is None
            or (
                self.modifier == TypeModifier::Var
                or self.modifier == TypeModifier::Val
            )
        )


# ----------------------------------------------------------------------
public immutable class TemplateTypeArgumentParserInfoRegions
    extends ParserInfo
:
    public TypeParserInfoRegions val type
    public (Region | None) val modifier
    public (Region | None) val keyword


# ----------------------------------------------------------------------
public immutable class TemplateExpressionArgumentParserInfo
    extends ParserInfo
:
    public CompileTimeExpressionParserInfo val expression
    public (String | None) val keyword


# ----------------------------------------------------------------------
public immutable class TemplateExpressionArgumentParserInfoRegions
    extends ParserInfoRegions
:
    public CompileTimeExpressionParserInfoRegions val expression
    public (Region | None) val keyword


# ----------------------------------------------------------------------
public using TemplateArgumentParserInfo = (TemplateTypeArgumentParserInfo | TemplateExpressionArgumentParserInfo)
public using TemplateArgumentParserInfoRegions = (TemplateTypeArgumentParserInfoRegions | TemplateExpressionArgumentParserInfoRegions)
