from .TypeModifier import TypeModifierParserInfo, TypeModifierParserInfoRegions
from ..ParserInfo import ParserInfo, ParserInfoRegions, Region
from ..CompileTimeExpressions.Expression import CompileTimeExpressionParserInfo, CompileTimeExpressionParserInfoRegions
from ..CompileTimeTypes.Type import CompileTimeTypeParserInfo, CompileTimeTypeParserInfoRegions
from ..Types.Type import TypeParserInfo, TypeParserInfoRegions


# ----------------------------------------------------------------------
public immutable class TemplateTypeParameterParserInfo
    extends ParserInfo
:
    public String val name

    public (
        (
            TypeParserInfo,
            (TypeModifierParserInfo | None),
        )
        | None
    ) val default


# ----------------------------------------------------------------------
public immutable class TemplateTypeParameterParserInfoRegions
    extends ParserInfoRegions
:
    public Region val name

    public (
        (
            TypeParserInfoRegions,
            (TypeModifierParserInfoRegions | None),
        )
        | None
    ) val default


# ----------------------------------------------------------------------
public immutable class TemplateExpressionParameterParserInfo
    extends ParserInfo
:
    public CompileTimeTypeParserInfo val type
    public String val name
    public (CompileTimeExpressionParserInfo | None) val default


# ----------------------------------------------------------------------
public immutable class TemplateExpressionParameterParserInfoRegions
    extends ParserInfoRegions
:
    public CompileTimeTypeParserInfoRegions val type
    public Region val name
    public (CompileTimeExpressionParserInfoRegions | None) val default


# ----------------------------------------------------------------------
public immutable class TemplateParametersParserInfo
    extends ParserInfo
:
    public using OptionalParameters = (List<(TemplateTypeParameterParserInfo | TemplateExpressionParameterParserInfo)>{ min_length'=1} | None)

    # ----------------------------------------------------------------------
    public OptionalParameters val positional
    public OptionalParameters val any
    public OptionalParameters val keyword

    # ----------------------------------------------------------------------
    private None __Init?__():
        # TODO: ensure self.positional or self.any or self.keyword
        assert self.positional or self.any or self.keyword


# ----------------------------------------------------------------------
public immutable class TemplateParametersParserInfoRegions
    extends ParserInfoRegions
:
    public using OptionalParametersRegions = (List<(TemplateTypeParameterParserInfoRegions | TemplateExpressionParameterParserInfoRegions)>{ min_length'=1 } | None)

    # ----------------------------------------------------------------------
    public OptionalParametersRegions val positional
    public OptionalParametersRegions val any
    public OptionalParametersRegions val keyword

    # ----------------------------------------------------------------------
    private None __Init?__():
        # TODO: ensure self.positional or self.any or self.keyword
        assert self.positional or self.any or self.keyword
